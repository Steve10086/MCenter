<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
                                            android:layout_height="45dp"
                                            android:background="@color/black"
>


    <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:background="#00ffffff"
            android:id="@+id/user_info_btn"
            android:contentDescription="@string/user_info_ic"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="@string/title"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/title"

            android:gravity="center" android:layout_marginStart="151dp"
            app:layout_constraintStart_toEndOf="@+id/user_info_btn" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="13dp"
    />
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:src="@android:drawable/ic_menu_add"
            android:background="#00ffffff"
            android:id="@+id/create_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>