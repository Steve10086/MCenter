<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/setting_page_back"
>
    <TextView
            android:text="@string/background"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/setting_background_text"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_theme_text" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline" app:layout_constraintGuide_begin="102dp"/>
    <TextView
            android:text="Theme"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/setting_theme_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="Email"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/setting_email_text"
            android:layout_marginStart="15dp" app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="62dp"/>
    <ImageView
            android:layout_width="71dp"
            android:layout_height="73dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>
    <Button
            android:text="Set Avatar"
            android:background="@color/transparent"
            android:textSize="12sp"
            android:textColor="@color/grey"
            android:layout_width="71dp"
            android:layout_height="73dp" android:id="@+id/textView9"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
    />
    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline2" app:layout_constraintGuide_end="509dp"/>
    <androidx.appcompat.widget.SwitchCompat
            android:text="Enable Zerotier"
            android:textColor="@color/white"
            android:background="@drawable/round_shape"
            android:padding="2dp"
            android:gravity="center"
            android:layout_width="142dp"
            android:layout_height="wrap_content" android:id="@+id/zerotier_switch"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_background_text"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/zerotier_switch">
        <TextView
                android:text="Current network"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView16"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp" android:layout_marginTop="13dp"
                app:layout_constraintTop_toBottomOf="@+id/button"/>
        <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16"
                app:layout_constraintEnd_toEndOf="parent"/>
        <Button
                android:text="Add network"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="142dp"
                android:layout_height="33dp" android:id="@+id/button"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="6dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <Button
                android:text="Set password"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="33dp" android:id="@+id/textView17"
                android:layout_marginStart="17dp" app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextTextEmailAddress"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="47dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/setting_email_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>