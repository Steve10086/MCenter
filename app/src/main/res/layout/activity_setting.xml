<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel" type="com.astune.mcenter.ui.SettingActivityViewModel"/>
        <variable name="property" type="com.astune.mcenter.utils.enums.Properties"/>
        <import type="android.view.View"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/setting_page_back"
            android:id="@+id/setting_background"
    >
        <TextView
                android:text="change background"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setting_background_text"
                android:layout_marginTop="20dp"
                android:background="@drawable/grey_round_strok_thin"
                android:padding="3dp"
                android:clickable="true"

                app:layout_constraintTop_toBottomOf="@+id/setting_theme_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline"
                android:background="@color/grey"
                app:layout_constraintGuide_percent="0.13953489"/>
        <androidx.appcompat.widget.SwitchCompat
                android:text="Theme"
                android:background="@drawable/grey_round_strok_thin"
                android:padding="2dp"
                android:gravity="center"
                app:trackTint="@color/grey"
                android:thumb="@drawable/setting_theme_thumb_selector"
                android:textColor="@color/white"
                android:checked="@{Boolean.parseBoolean(viewModel.settingMap.get(property.THEME))}"
                android:onCheckedChanged='@{(b, status) -> viewModel.updateMap(property.THEME, status ? "true" : "false")}'
                android:layout_width="94dp"
                android:layout_height="wrap_content" android:id="@+id/setting_theme_text"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
                android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/avatar_img"/>
        <TextView
                android:text="Email"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/setting_email_text"
                android:layout_marginStart="15dp" app:layout_constraintStart_toEndOf="@+id/avatar_img"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="62dp"/>
        <ImageView
                android:layout_width="71dp"
                android:layout_height="73dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/avatar_img"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"/>
        <Button
                android:text="Set Avatar"
                android:background="@color/transparent"
                android:textSize="12sp"
                android:textColor="@color/grey"
                android:layout_width="71dp"
                android:layout_height="73dp" android:id="@+id/set_avatar_btn"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="22dp"
        />
        <androidx.constraintlayout.widget.Guideline
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline2"
                android:background="@color/grey"
                app:layout_constraintGuide_percent="0.30369356"/>
        <androidx.appcompat.widget.SwitchCompat
                android:text="Enable Zerotier"
                android:textColor="@color/white"
                android:background="@drawable/grey_round_strok_thin"
                app:trackTint="@color/grey"
                android:checked="@{Boolean.parseBoolean(viewModel.settingMap.get(property.ZEROTIER))}"
                android:onCheckedChanged='@{(b, status) -> viewModel.updateMap(property.ZEROTIER, status ? "true" : "false")}'
                android:padding="2dp"
                android:gravity="center"
                android:layout_width="142dp"
                android:layout_height="wrap_content" android:id="@+id/zerotier_switch"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@+id/setting_background_text"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:layout_width="409dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility='@{Boolean.parseBoolean(viewModel.settingMap.get(property.ZEROTIER)) ? View.VISIBLE : View.GONE}'
                app:layout_constraintTop_toBottomOf="@+id/zerotier_switch" android:layout_marginBottom="343dp"
        >
            <TextView
                    android:text="Current network"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp" android:layout_marginTop="13dp"
                    app:layout_constraintTop_toBottomOf="@+id/button"/>
            <ListView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView16"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <Button
                    android:text="Add network"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_width="142dp"
                    android:layout_height="33dp" android:id="@+id/button"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="6dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"/>
            <Button
                    android:text="Set password"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp" android:id="@+id/set_password_btn"
                    android:layout_marginStart="17dp" app:layout_constraintStart_toEndOf="@+id/button"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"/>
            <TextView
                    android:text='@{"Password:\n" + viewModel.settingMap.get(property.PASSWORD)}'
                    android:textSize="10sp"
                    android:textColor="@color/grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/password_text"
                    android:layout_marginStart="9dp"

                    app:layout_constraintStart_toEndOf="@+id/set_password_btn" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="11dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.settingMap.get(property.EMAIL)}"
                android:onTextChanged="@{(text, start, before, count) -> viewModel.updateMap(property.EMAIL, text.toString())}"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:textColor="@color/white"
                android:id="@+id/editEmailAddress"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="47dp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@+id/setting_email_text"/>
        <TextView
                android:layout_width="200dp"
                android:layout_height="1dp" android:id="@+id/under_line"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="84dp" app:layout_constraintEnd_toEndOf="@+id/editEmailAddress"
                android:background="@color/grey"
                app:layout_constraintStart_toStartOf="@+id/editEmailAddress"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>