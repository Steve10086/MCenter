<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.WebLinkPage">
    <View
            android:layout_width="wrap_content"
            android:layout_height="45dp" android:id="@+id/view" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:progress="50"
            android:progressBackgroundTint="@color/mc_purple"
            android:progressTint="@color/mc_purple"
            android:id="@+id/web_load_progress" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="41dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:id="@+id/web_url_text" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"
            android:layout_marginTop="2dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="2dp"/>
    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/web_webview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/web_load_progress" android:layout_marginTop="45dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="45dp">
    </WebView>
    <ImageButton
            android:src="?attr/actionModeCloseDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:id="@+id/web_back_btn"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="10dp"/>
    <ImageButton
            android:src="?attr/actionModeCloseDrawable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:id="@+id/web_forward_btn"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp" android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>